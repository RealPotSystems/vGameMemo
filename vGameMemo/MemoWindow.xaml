<Window x:Class="vGameMemo.MemoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MemoWindow" Height="300" Width="300" Visibility="Hidden" WindowStyle="None" ResizeMode="NoResize" Topmost="True" ShowInTaskbar="False">
    <Border BorderThickness="3" Padding="0" BorderBrush="#FF9999A6">
        <Canvas x:Name="MemoCanvas" SnapsToDevicePixels="False">
            <InkCanvas x:Name="Memo" RenderTransformOrigin="0,0" Canvas.Top="0" Canvas.Left="0">
                <InkCanvas.Background>
                    <ImageBrush Stretch="None" AlignmentX="Left" AlignmentY="Top" />
                </InkCanvas.Background>
            </InkCanvas>
        </Canvas>
    </Border>
</Window>
